= content_for(:heading, @blog.title)
= content_for(:sub_heading, "Posted #{time_ago_in_words(@blog.created_at)} ago")

%article
  .container
    .row
      .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
        .blog-content
          = @blog.content.html_safe
        %br
        .tags
          %h5 Tags:
          %hr
          - @blog.tags.each do |tag|
            = link_to tag, blogs_path(tag: tag), class: "btn", style: "color:#fff;padding: 6px 25px;background:grey;"
        
    %br            
    .row.comments
      = render "comments", blog: @blog, comment: @comment

%a.backtohome{:href => "/"}
  %i.fa.fa-angle-up
  << Back to Home  

        
:javascript

  var start;
  var now = new Date();

  $(document).ready(function() {
    start = now.getTime();
    console.log(start);
  });
     
   $(window).unload(function() {
        end = now.getTime();
        console.log(end);
        $.ajax({ 
          url: "/blogs/#{@blog.id}/update_view_count",
          data: {'timeSpent': end - start}
        })
    });
  
 
