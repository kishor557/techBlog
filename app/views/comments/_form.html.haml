= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :new
    = f.text_field :new
  .field
    = f.label :create
    = f.text_field :create
  .field
    = f.label :edit
    = f.text_field :edit
  .field
    = f.label :update
    = f.text_field :update
  .field
    = f.label :destroy
    = f.text_field :destroy
  .actions
    = f.submit 'Save'
