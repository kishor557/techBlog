%div
  %h3= @blog.title
  = link_to "Back", admin_blogs_path, class: "btn btn-primary", style: "float:right;margin-top:-41px;"
  = link_to "Preview", "#", class: "btn btn-success", style: "float:right;", "data-target" => ".bs-example-modal-lg", "data-toggle" => "modal"
%hr

.container-fluid
  .row
    .col-lg-12
      %div
        %label Content:
        %p= @blog.content
      %div
        %label Tags:
        %p= @blog.tags_list          
      %div
        %label Is Active?:
        %p= @blog.is_active              
      %div
        %label Created At:
        %p= @blog.created_at.strftime("%d %b, %Y %H:%M")    
      %div
        %label Comments:
        %p= link_to @blog.comments.count, admin_blog_comments_path(@blog) 
      %div
        %label Views:
        %p= @blog.views.count                
        
  
        
.modal.fade.bs-example-modal-lg{"aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = render 'preview'
            
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
